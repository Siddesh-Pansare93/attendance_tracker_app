{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
      "bash": {
        "*": "allow",
        "git*": "ask",
        "rm*": "ask",
        "mv*": "ask",
        "cp*": "ask",
        "chmod*": "ask",
        "chown*": "ask",
        "sudo*": "deny",
        "curl*": "ask",
        "wget*": "ask",
        "npm install*": "ask",
        "npm uninstall*": "ask",
        "npm ci*": "ask",
        "pnpm install*": "ask",
        "pnpm uninstall*": "ask",
        "docker*": "ask",
        "kill*": "ask"
      },
      "read": {
        "*": "allow",
        ".env.example": "allow",
        ".env": "allow",
        ".env.*": "allow"
      },
      "edit": {
        "*": "allow",
        ".env*": "deny",
        "*.pem": "deny",
        "*.key": "deny",
        "*credentials*": "deny",
        "*secrets*": "deny"
      },
      "webfetch": "ask",
      "websearch": "allow",
      "external_directory": "ask"
    }
  }
